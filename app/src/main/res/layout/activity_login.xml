<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Login">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="로그인"
        android:gravity="center"
        android:textSize="50sp"
        android:textColor="#000000"
        android:fontFamily="@font/bmeulgiro"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/id"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="15"
        android:inputType="textPersonName"
        android:hint="ID"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:textColor="#000000" />

    <CheckedTextView
        android:id="@+id/checked_id"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="아이디를 입력해주세요."
        android:visibility="invisible"
        android:textColor="#ff0000"
        />

    <EditText
        android:id="@+id/password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="15"
        android:layout_gravity="center"
        android:inputType="textPassword"
        android:hint="Password"
        android:textColor="#000000"/>

    <CheckedTextView
        android:id="@+id/checked_password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible"
        android:textColor="#ff0000"
        android:text="비밀번호를 입력해주세요." />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/facebook_login_bt"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"/>

    <com.google.android.gms.common.SignInButton
        android:id="@+id/google_login_bt"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="50dp">

        <Button
            android:id="@+id/recruit"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textSize="20sp"
            android:fontFamily="@font/bmeulgiro"
            android:textColor="#000000"
            android:backgroundTint="#ffffff"/>

        <Button
            android:id="@+id/check_bt"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="확인"
            android:textSize="20sp"
            android:fontFamily="@font/bmeulgiro"
            android:textColor="#000000"
            android:backgroundTint="#ffffff"/>


    </LinearLayout>



</LinearLayout>